  <div id="automation-banner" class="automation-banner">
    Banner content
  </div>

  <script>
    // Test mode flag
    window.__SEENTICS_TEST_MODE__ = true;
    window.__EXECUTION_LOG__ = [];

    // Helper to log execution steps
    function logStep(type, name, status, message) {
      const step = {
        type,
        name,
        status,
        message,
        timestamp: Date.now()
      };
      
      window.__EXECUTION_LOG__.push(step);
      
      // Send to parent window
      window.parent.postMessage({
        type: 'EXECUTION_STEP',
        step
      }, '*');
      
      // Update status display
      updateStatus(step);
    }

    function updateStatus(step) {
      const statusEl = document.getElementById('status-message');
      const icon = step.status === 'success' ? 'âœ…' : 
                   step.status === 'failed' ? 'âŒ' : 
                   step.status === 'running' ? 'â³' : 'â¸ï¸';
      statusEl.textContent = `${icon} ${step.type.toUpperCase()}: ${step.name} - ${step.message || step.status}`;
    }

    // Modal functions
    function showModal(title, content) {
      document.getElementById('modal-title').textContent = title;
      document.getElementById('modal-text').textContent = content;
      document.getElementById('automation-modal').classList.add('visible');
      logStep('action', 'Show Modal', 'success', `Displayed: "${title}"`);
    }

    function closeModal() {
      document.getElementById('automation-modal').classList.remove('visible');
    }

    // Banner function
    function showBanner(content, bgColor, position = 'top') {
      const banner = document.getElementById('automation-banner');
      banner.textContent = content;
      banner.style.background = bgColor || '#667eea';
      banner.style.color = 'white';
      banner.style[position] = '0';
      banner.classList.add('visible');
      logStep('action', 'Show Banner', 'success', `Displayed: "${content}"`);
      
      setTimeout(() => {
        banner.classList.remove('visible');
      }, 5000);
    }

    // Listen for test commands from parent
    window.addEventListener('message', async (event) => {
      if (event.data.type === 'START_AUTOMATION_TEST') {
        const { automation, testData } = event.data;
        
        logStep('test', 'Test Started', 'running', `Testing: ${automation.name}`);
        
        await new Promise(resolve => setTimeout(resolve, 500));
        
        // 1. Evaluate Trigger
        logStep('trigger', automation.trigger?.type || 'Page View', 'running', 'Checking trigger conditions...');
        await new Promise(resolve => setTimeout(resolve, 800));
        
        const triggerMatched = evaluateTrigger(automation.trigger, testData);
        if (triggerMatched) {
          logStep('trigger', automation.trigger?.type || 'Page View', 'success', 'Trigger matched!');
        } else {
          logStep('trigger', automation.trigger?.type || 'Page View', 'failed', 'Trigger did not match');
          window.parent.postMessage({ type: 'TEST_COMPLETE' }, '*');
          return;
        }
        
        await new Promise(resolve => setTimeout(resolve, 500));
        
        // 2. Evaluate Conditions
        const conditions = automation.conditions || [];
        let allConditionsPassed = true;
        
        for (let i = 0; i < conditions.length; i++) {
          const condition = conditions[i];
          const conditionName = condition.config?.conditionType || condition.type || `Condition ${i + 1}`;
          
          logStep('condition', conditionName, 'running', 'Evaluating...');
          await new Promise(resolve => setTimeout(resolve, 600));
          
          const passed = evaluateCondition(condition, testData);
          if (passed) {
            logStep('condition', conditionName, 'success', 'Condition passed');
          } else {
            logStep('condition', conditionName, 'failed', 'Condition not met');
            allConditionsPassed = false;
            break;
          }
          
          await new Promise(resolve => setTimeout(resolve, 300));
        }
        
        if (!allConditionsPassed) {
          logStep('test', 'Test Ended', 'failed', 'Conditions not met');
          window.parent.postMessage({ type: 'TEST_COMPLETE' }, '*');
          return;
        }
        
        await new Promise(resolve => setTimeout(resolve, 500));
        
        // 3. Execute Actions
        const actions = automation.actions || [];
        
        for (let i = 0; i < actions.length; i++) {
          const action = actions[i];
          const actionName = action.config?.actionType || action.type || `Action ${i + 1}`;
          
          logStep('action', actionName, 'running', 'Executing...');
          await new Promise(resolve => setTimeout(resolve, 800));
          
          await executeAction(action);
          
          await new Promise(resolve => setTimeout(resolve, 500));
        }
        
        await new Promise(resolve => setTimeout(resolve, 800));
        logStep('test', 'Test Complete', 'success', 'All steps executed successfully!');
        
        window.parent.postMessage({ type: 'TEST_COMPLETE' }, '*');
      }
    });

    // Trigger evaluation
    function evaluateTrigger(trigger, testData) {
      if (!trigger) return true;
      
      const type = trigger.config?.triggerType || trigger.type;
      
      switch (type) {
        case 'pageView':
          return true; // Page is loaded
        case 'scroll':
          return true; // Simulate scroll
        case 'timeOnPage':
          return true; // Simulate time
        case 'exitIntent':
          return true; // Simulate exit intent
        default:
          return true;
      }
    }

    // Condition evaluation
    function evaluateCondition(condition, testData) {
      const type = condition.config?.conditionType || condition.type;
      
      switch (type) {
        case 'page_match':
        case 'pageMatch':
          return true; // Simplified for test
        case 'visit_count':
        case 'visitCount':
          return true;
        case 'time_on_page':
        case 'timeOnPage':
          return true;
        default:
          return true;
      }
    }

    // Action execution
    async function executeAction(action) {
      const type = action.config?.actionType || action.type;
      const config = action.config || {};
      
      switch (type) {
        case 'modal':
          showModal(
            config.title || 'Modal Title',
            config.content || 'Modal content'
          );
          break;
          
        case 'banner':
          showBanner(
            config.content || 'Banner content',
            config.backgroundColor || '#667eea',
            config.position || 'top'
          );
          break;
          
        case 'redirect':
          logStep('action', 'Redirect', 'success', `Would redirect to: ${config.url || '/'}`);
          break;
          
        case 'email':
          logStep('action', 'Send Email', 'success', `Would send email to: ${config.recipient || 'user@example.com'}`);
          break;
          
        case 'webhook':
          logStep('action', 'Webhook', 'success', `Would call webhook: ${config.url || 'https://example.com/webhook'}`);
          break;
          
        default:
          logStep('action', type || 'Unknown Action', 'success', 'Action executed');
      }
    }

    // Notify parent that iframe is ready
    window.parent.postMessage({
      type: 'AUTOMATION_TEST_READY'
    }, '*');

    console.log('ðŸ§ª Automation Test Sandbox loaded and ready');
  </script>
